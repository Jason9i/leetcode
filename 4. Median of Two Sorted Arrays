class Solution:
    def findMedianSortedArrays(self, nums1: List[int], nums2: List[int]) -> float:
        if len(nums1) > len(nums2):
            nums1, nums2 = nums2, nums1

        len_n1, len_n2 = len(nums1), len(nums2)
        left, right = 0, len_n1    

        while left <= right:
            i = (left + right) // 2
            j = (len_n1 + len_n2 + 1) //2 - i

            maxLeftA = float("-inf") if i == 0 else nums1[i-1]
            minrightA = float("inf") if i == len_n1 else nums1[i]

            maxleftB = float("-inf") if j == 0 else nums2[j-1]
            minRightB = float("inf") if j == len_n2 else nums2[j]

            if maxLeftA <= minRightB and minrightA >= maxleftB:

                if (len_n1 + len_n2)%2 == 0:
                    return (max(maxLeftA, maxleftB) + min(minrightA, minRightB)) /2
                else:
                    return max(maxLeftA, maxleftB)

            elif maxleftB > minrightA:
                left = i + 1
            else:
                right = i - 1    




